---
import Icon from './Icon.astro';
---

<aside>
	<h2>LET'S BUILD SOMETHING COOL</h2>
	<div class="contact_form" id="contact">
		<form action="https://formspree.io/f/xbjeoyol" method="post">
			<label for="fullname" hidden>Fullname</label>
			<input
				id="fullname"
				type="text"
				placeholder="Full name"
				name="fullname"
				maxlength="30"
				required
			/>
			<label for="email" hidden>Email</label>
			<input
				id="email"
				type="email"
				placeholder="Email Address"
				name="email"
				required
			/>
			<label for="message" hidden>Message</label>
			<textarea
				id="message"
				name="message"
				placeholder="Enter text here"
				maxlength="500"
				required
			></textarea>
			<button>
				Send message
				<Icon icon="paper-plane-tilt" size="1.2em" />
			</button>
		</form>
	</div>
</aside>

<style>
	aside {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 3rem;
		border-top: 1px solid var(--gray-800);
		border-bottom: 1px solid var(--gray-800);
		padding: 5rem 1.5rem;
		background-color: var(--gray-0);
	}

	h2 {
		color: var(--gray-999);
		font-size: var(--text-xl);
		text-align: center;
	}

	.contact_form {
  min-width: 500px;
}

form {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

input,
textarea {
  border: 1px solid var(--gray-50);
  border-radius: 4px;
  padding-inline-start: 1em;
  font-size: 0.938rem;
  color: var(--slate-gray);
}

input {
  padding-block: 1em;
}

textarea {
  padding-block-start: 1em;
  height: 117px;
  font-family: "Inter", sans-serif;
}

input:focus,
textarea:focus {
  outline: 1px solid var(--accent-regular);
  color: black;
}

button {
		position: relative;
		display: flex;
		place-content: center;
		text-align: center;
		padding: 0.56em 2em;
		gap: 0.8em;
		color: var(--accent-text-over);
		text-decoration: none;
		line-height: 1.1;
		border: none;
		border-radius: 999rem;
		overflow: hidden;
		background: var(--accent-regular);
		white-space: nowrap;
	}

	button:hover {
		background-color: var(--accent-dark);
		box-shadow: var(--shadow-md);
		cursor: pointer;
	}

	@media (min-width: 20em) {
		button {
			font-size: var(--text-lg);
		}
	}

	@media (min-width: 50em) {
		button {
			padding: 1.125rem 2.5rem;
			font-size: var(--text-xl);
		}
	}
	@media (min-width: 50em) {
		aside {
			padding: 7.5rem;
			flex-wrap: wrap;
		}

		h2 {
			font-size: var(--text-3xl);
			text-align: left;
		}

		.contact_form {
    flex-basis: 0;
    flex-grow: 1;
    margin-block-start: 1em;
  }
	}
</style>
